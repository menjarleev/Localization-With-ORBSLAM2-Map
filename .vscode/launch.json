{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "localization",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/extension/localization",
            "args": [
                "${workspaceFolder}/Vocabulary/ORBvoc.txt",
                "${workspaceFolder}/extension/config/KITTI04-12-localization.yaml",
                "/data/dataset/sequences/04",
                "/data/motion/result_seq_04.txt",
                "${workspaceFolder}/extension/predict_pose.txt"
            ],
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                }
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/extension/",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "save_map",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/extension/mapsaver",
            "args": [
                "${workspaceFolder}/Vocabulary/ORBvoc.txt",
                "${workspaceFolder}/extension/config/KITTI04-12-save_map.yaml",
                "/data/dataset/sequences/04"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/extension/",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}